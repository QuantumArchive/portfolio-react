{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.js",
    "server/**/*.js"
  ],
  "coverageDirectory": "./reports/unit",
  "coveragePathIgnorePatterns": [
    "^<rootDir>/src/(index|constants|styles).js$"
  ],
  "coverageReporters": [
    "json-summary",
    "lcov",
    "html",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "roots": [
    "<rootDir>/tests/unit",
    "<rootDir>/src"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/tests/helper.js",
  "transform": {
    "^.+\\.js?$": "babel-jest"
  }
}
